#https://stackoverflow.com/questions/71006250/how-to-make-version-custom-command-in-linux and https://ryanstutorials.net/bash-scripting-tutorial/bash-variables.php are the sources
ransack_download() {
    # --install: installs a package using a download script (category/package, e.g. app-emulation/cemu)
   ./sourcescript/$1
    exit
}

cli_version() {
    # --version: Show version
    echo "Ransack - a simple and flexible package manager"
    exit
}
ransack_update() {
    # --update: update package scripts
    mkdir  /sourcescript
    cd /sourcescript
    wget https://github.com/RennyDemmy/ransack/tree/main/repo/update #(add script repo url here)
    chmod +777 update
    sudo sh ./update
    print world.txt
    exit
}
ransack_uninstall() {
    # --uninstall: remove package
    ./sourcescript/$1-uninstall
}
# Argument
case $1 in
    "--install"|"-i")
        ransack_download
        ;;
    "--version"|"-V")
        cli_version
        ;;
    "--update"|"-u")
        ransack_update
        ;;
    "--uninstall"|"-r")
        ransack_uninstall
        ;;
esac
# Main program
echo "Heya custom commands"
